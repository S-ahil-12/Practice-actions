name: SSH Test and Create Folder

on:
  push:
    branches:
      - main

jobs:
  ssh_test_and_create_folder:
    runs-on: ubuntu-latest
    
    steps:
      - name: Echo SSH Private Key to File
        run: echo "${{ secrets.TEST_SSH_PRIVATEKEY }}" > ~/.ssh/id_rsa && chmod 600 ~/.ssh/id_rsa

      - name: SSH to Remote Server and Create Folder
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.TEST_SSH_HOST }}
          username: ${{ secrets.TEST_SSH_USERNAME }}
          key: ~/.ssh/id_rsa
          script: |
            mkdir -p /root/test
            echo "Folder created successfully in /root/test"

